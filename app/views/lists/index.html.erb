<h1>My lists</h1>


<ul>
  <% @lists.each do |list| %>
    <li>
      <div class="card bg-dark text-white">
       <img class="card-img" src="<%= asset_path('card_2_grey.jpg') %>" alt="Card image">
      <div class="card-img-overlay">
