<h2><%=@list.name %></h2>


  <ul>
    <% @bookmarks.each do |bookmark| %>
      <li>
        <%= bookmark.movie.title %>
        <%= bookmark.comment%>
        <%= button_to 'remove movie', list_bookmark_path(@list, bookmark), class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
  <%= link_to 'Back', lists_path, class: 'btn btn-primary' %>
